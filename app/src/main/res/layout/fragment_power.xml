<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.power.PowerFragment">

    <TextView
        android:id="@+id/text_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="384dp"
        android:layout_marginTop="716dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Description1"
        android:layout_width="361dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:text="View battery usage on your android phone"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Descriptionx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="117dp"
        android:text="Time"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/graphusage" />

    <TextView
        android:id="@+id/Description3"
        android:layout_width="150dp"
        android:layout_height="19dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="1dp"
        android:text="Most used Applications"
        app:layout_constraintEnd_toStartOf="@+id/underline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Descriptionx" />

    <ImageView
        android:id="@+id/App1_Pic"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toStartOf="@+id/App1_Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Description3"
        app:srcCompat="@drawable/ic_launcher"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/App2_Pic"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toStartOf="@+id/App2_Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/App1_Pic"
        app:srcCompat="@drawable/ic_launcher"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/App3_Pic"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toStartOf="@+id/App3_Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/App2_Pic"
        app:srcCompat="@drawable/ic_launcher"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/App4_Pic"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toStartOf="@+id/App4_Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/App3_Pic"
        app:srcCompat="@drawable/ic_launcher"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/App5_Pic"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toStartOf="@+id/App5_Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/App4_Pic"
        app:srcCompat="@drawable/ic_launcher"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/App1_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="App_Name_Template1"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/App1_Pic"
        app:layout_constraintTop_toBottomOf="@+id/Description3" />

    <TextView
        android:id="@+id/App2_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="App_Name_Template2"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/App2_Pic"
        app:layout_constraintTop_toBottomOf="@+id/App1_Name" />

    <TextView
        android:id="@+id/App3_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="App_Name_Template3"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/App3_Pic"
        app:layout_constraintTop_toBottomOf="@+id/App2_Name" />

    <TextView
        android:id="@+id/App4_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="App_Name_Template4"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/App4_Pic"
        app:layout_constraintTop_toBottomOf="@+id/App3_Name" />

    <TextView
        android:id="@+id/App5_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="App_Name_Template5"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/App5_Pic"
        app:layout_constraintTop_toBottomOf="@+id/App4_Name" />

    <TextView
        android:id="@+id/battery_percentage_app1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="35dp"
        android:text="%"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/App1_Name"
        app:layout_constraintTop_toBottomOf="@+id/underline2" />

    <TextView
        android:id="@+id/battery_percentage_app2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:text="%"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/App2_Name"
        app:layout_constraintTop_toBottomOf="@+id/battery_percentage_app1" />

    <TextView
        android:id="@+id/battery_percentage_app3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="35dp"
        android:text="%"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/App3_Name"
        app:layout_constraintTop_toBottomOf="@+id/battery_percentage_app2" />

    <TextView
        android:id="@+id/battery_percentage_app4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="35dp"
        android:text="%"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/App4_Name"
        app:layout_constraintTop_toBottomOf="@+id/battery_percentage_app3" />

    <TextView
        android:id="@+id/battery_percentage_app5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="35dp"
        android:text="%"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/App5_Name"
        app:layout_constraintTop_toBottomOf="@+id/battery_percentage_app4" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphusage"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Description1" />

    <View
        android:id="@+id/underline1"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="31dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Description1" />

    <View
        android:id="@+id/underline2"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="21dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Descriptionx" />

    <View
        android:id="@+id/underline3"
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="373dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/graphusage" />

    <Button
        android:id="@+id/snapbuttonusage"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:background="@color/colorButton"
        android:text="Take SnapShot of Usage Graph"
        app:layout_constraintEnd_toStartOf="@+id/picscreenshot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/App5_Pic" />

    <ImageView
        android:id="@+id/picscreenshot"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="11dp"
        android:src="@drawable/ic_baseline_mobile_screen_share_26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/snapbuttonusage"
        app:layout_constraintTop_toBottomOf="@+id/battery_percentage_app5" />

    <TextView
        android:id="@+id/Descriptiony"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="100dp"
        android:rotation="-90"
        android:text="Power"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/graphusage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Description1" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="416dp"
        android:layout_height="434dp"
        android:layout_marginTop="9dp"
        android:rotation="180"
        android:src="@drawable/shadow_down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Description3" />

</androidx.constraintlayout.widget.ConstraintLayout>